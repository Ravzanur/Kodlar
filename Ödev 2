/* Ravzanur CANTÜRK
Ödev 2
Karmaşık sayılar
*/

#include <iostream>

using namespace std;

const int i = sqrt(-1);

class Complexnumber {//class tanımmlama

private:
    int real;
    int imaginary;

public:

    Complexnumber() {//1.default constructor
        this->real = 0;
        this->imaginary = 0;
    }

    Complexnumber(int a) {//2.conversion constructor
        this->real = a;
        this->imaginary = 0;
    }

    Complexnumber(double a) {//3.conversion constructor
        this->real = a;
        this->imaginary = 0;
    }

    void produce_cn(int a, int b) {//5.karmaşık sayı üreten constructor
        this->real = a;
        this->imaginary = b;
    };

    void setreal(int reel) {//6 reel için setter
        real = reel;
    };

    int getreal() {//6 reel için getter
        return real;
    };

    void setimaginary(int imajiner) {//6 imajiner için setter
        imaginary = imajiner;
    };

    int getimaginary() {//6 imajiner için getter
        return imaginary;
    };


    void add(const Complexnumber x) { //7 aldığı karmaşık sayıyı kendine ekleyen member function
        real += x.real;
        imaginary += x.imaginary;
        cout << "Sonuc=" << real << "+" << imaginary << "i" << endl;
    };

    void subtract(const Complexnumber x) { //8 aldığı karmaşık sayıyı kendinden çıkaran member function
        real -= x.real;
        imaginary -= x.imaginary;
        cout << "Sonuc=" << real << "+" << imaginary << "i" << endl;
    };

    void divide(const Complexnumber x) {//9 aldığı karmaşık sayıyı kendine bölen member function
        real /= x.real;
        imaginary /= x.imaginary;
        cout << "Sonuc=" << real << "+" << imaginary << "i" << endl;
    };

    void print(const Complexnumber x) {//10 aldığı karmaşık sayıyı ekrana bastırır
        cout << "Karmasik Sayi=" << x.real << "+" << x.imaginary << "i" << endl;
    };
};

void printcn(int a, int b) {// karmaşık sayının reel ve imajiner kısmını ayrı ayrı bastırır.
    cout << "Sayinin reel kismi="<< a << endl;
    cout << "Sayinin imajiner kismi=" << b << endl;
};

int main()
{
    Complexnumber sayi1;//sayi1 isimli nesne tanımlaması
    Complexnumber sayi2;//sayi2 isimli nesne tanımlaması
    sayi1.setreal(12);
    sayi1.setimaginary(8);
    sayi2.setreal(3);
    sayi2.setimaginary(-2);
    sayi1.add(sayi2);
    sayi1.subtract(sayi2);
    sayi1.divide(sayi2);
    sayi1.print(sayi2);
    printcn(sayi2.getreal(),sayi2.getimaginary());

}
